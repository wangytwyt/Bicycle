            android:label="BleService">
            <intent-filter android:priority="1000">
                <action android:name="com.sofi.smartlocker.ble.BleService" />
            </intent-filter>
        </service>

        <activity android:name=".Personal.yonhuxieyi.YhxyActivity" />
        <activity
            android:name=".zxing.utils.CaptureActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar" />
        <activity android:name=".Kaisuo.KaisuoActivity" />
        <activity android:name=".zxing.camera.open.InputActivity" />
        <activity android:name=".SouSuoActivity" />
        <activity android:name=".Personal.XiugaiNameActivity" />
        <activity android:name=".Personal.Guide.GuideActivity" />
        <activity android:name=".Personal.Guide.CantOpenActivity" />
        <activity android:name=".Personal.Shanliangfen.ShanliangActivity" />
        <activity android:name=".Personal.Shanliangfen.GuizeActivity" />
        <activity android:name=".Personal.qianbao.QianbaoActivity" />
        <activity android:name=".Personal.Guide.WeitingActivity" />
        <activity android:name=".Personal.zhaobudaoche.ZhaobudaocheActivity" />

    </application>

</manifest>