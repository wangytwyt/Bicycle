<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_set_phone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.bicycle.Personal.UpdatePhoneActivity">

    <include layout="@layout/public_layout_title" />


    <TextView
        android:id="@+id/et_old"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:text=""
        android:gravity="center_vertical"
        android:background="@mipmap/shurukuang"
        android:textSize="18dp"
         />

    <EditText
        android:id="@+id/et_new"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@mipmap/shurukuang"
        android:hint="  请输入要绑定的号码" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/et_newauthcode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="请输入验证码"
            android:layout_weight="2"
            android:background="@mipmap/shurukuang"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tv_newauthcode"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@color/but_background"
            android:gravity="center"
            android:text="验证码"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>
    <Button
        android:id="@+id/but_certification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更   换"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:background="@mipmap/dianzizhuangtai"
        android:layout_margin="10dp"
        />
</LinearLayout>
