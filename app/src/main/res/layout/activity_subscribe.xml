<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_subscribe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.bicycle.SubscribeActivity">
    <include layout="@layout/public_layout_title" />
     <ImageView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:src="@mipmap/yuyue"
         android:scaleType="fitXY"
         />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/view_background"/>
    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="vertical"
        android:background="@color/white"
         android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        <RadioButton
            android:id="@+id/rb_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0-15分钟免费"
            android:textSize="16sp"
            android:padding="10dp"
            android:button="@drawable/select_but_subscibe"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@mipmap/xian"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="半小时内1嘿币"
            android:textSize="16sp"
            android:padding="10dp"
            android:button="@drawable/select_but_subscibe"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@mipmap/xian"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="半小时-1小时2嘿币"
            android:textSize="16sp"
            android:padding="10dp"
            android:button="@drawable/select_but_subscibe"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@mipmap/xian"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2小时3嘿币"
            android:textSize="16sp"
            android:padding="10dp"
            android:button="@drawable/select_but_subscibe"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@mipmap/xian"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4小时5嘿币"
            android:textSize="16sp"
            android:padding="10dp"
            android:button="@drawable/select_but_subscibe"
            />

    </RadioGroup>



    <Button
        android:id="@+id/but_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@mipmap/dianzizhuangtai"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />


</LinearLayout>
